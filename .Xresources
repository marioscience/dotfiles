XTerm*renderFont: true
XTerm*faceName: terminus-9
XTerm*faceSize: 9

UXTerm*renderFont: true

UXTerm*faceName: terminus-9
UXTerm*faceSize: 9

URTerm*geometry:  80x50

xterm*background: #262626
xterm*foreground: #FDFDFD

xterm*scrollBar: false

xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48

URxvt.font:                 xft:Monaco for Powerline:regular:size=9, xft:Inconsolata\ for\ Powerline:pixelsize=9
URxvt.imFont:               xft:Monaco for Powerline:regular:size=9, xft:Inconsolata\ for\ Powerline:pixelsize=9
URxvt.boldFont:             xft:Monaco for Powerline:bold:size=9, xft:Inconsolata\ for\ Powerline:pixelsize=9
URxvt.italicFont:           xft:Monaco for Powerline:italic:size=9, xft:Inconsolata\ for\ Powerline:pixelsize=9
URxvt.boldItalicFont:       xft:Monaco for Powerline:bold:italic:size=9, xft:Inconsolata\ for\ Powerline:pixelsize=9

URxvt.letterSpace:      -1

!disable ctrl+shift urxvt popup binding
URxvt.iso14755: false
URxvt.iso14755_52: false

!workaround for CTRL bindings clashing with micro editor
!https://github.com/zyedidia/micro/issues/706
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Shift-Control-Left:    \033[1;6D
URxvt.keysym.Control-Right:    \033[1;5C
URxvt.keysym.Shift-Control-Right:    \033[1;6C
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Shift-Control-Down:    \033[1;6B

